# Backend environment variables for Render/production
# MongoDB
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority

# Auth (JWT)
JWT_SECRET=replace_with_strong_secret
JWT_EXPIRES_IN=7d

# CORS: add your deployed frontend URL(s), comma-separated (no trailing slash)
# Example: https://your-frontend.vercel.app,https://www.yourdomain.com
CORS_ORIGIN=https://your-frontend.vercel.app

# Node environment
NODE_ENV=production

# Optional: Email SMTP (only if you want emails)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your@email.com
SMTP_PASS=your_smtp_password
FROM_NAME=MP Online Shop
FROM_EMAIL=no-reply@yourdomain.com
